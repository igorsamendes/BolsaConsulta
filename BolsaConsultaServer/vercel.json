{
  "public": true,
  "builds": [
    {
      "src": "src/server.js",
      "use": "@vercel/node",
      "config": { 
        "PrismaClient": "prisma/client",
        "PrismaGenerate": "npm run prisma:generate"
      }
    }
  ],
  "routes": [
    {
      "src": "(.*)",
      "dest": "src/server.js"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "runtime": "@vercel/node",
      "includeFiles": "src/**/*"
    }
  },
  "version": 2
}
